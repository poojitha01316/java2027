import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner sc=new Scanner(System.in);
		int T=sc.nextInt();
		while(T-->0){
		    int N=sc.nextInt();
		    int A=sc.nextInt();
		    int B=sc.nextInt();
		    int odd = (N + 1) / 2;
            int even = N / 2;
            int total = odd * B + even * A;
            System.out.println(total);
        }
        
        sc.close();

	}
}
